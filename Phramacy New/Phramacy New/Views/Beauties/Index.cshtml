@model IEnumerable<Entities.Beauty>
<table class="table table-dark m-2">
    <thead>
        <tr>
            <th scope="col">Beauty</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">
                <a class="btn btn-success" href="../Beauties/Create">Add New Beauty</a>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>

                <td>@m.Name</td>
                <td>$@m.Price</td>
                <td>
                    @if (!String.IsNullOrEmpty(m.ImageName))
                    {
                        <img width="100" height="100" src="~/BeautyImages/@m.ImageName" />
                    }
                </td>
                <td>
                    <div>
                        <a class="btn btn-primary" href="../Beauties/Edit/@m.Id">
                            Edit
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-danger" href="../Beauties/Delete/@m.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>