<link rel="stylesheet" href="~/css/card.css" />

@model Entities.Beauty
@{
    if (String.IsNullOrEmpty(ViewBag.Error))
    {


        <div class="card-category-1">

            <div class="basic-card basic-card-dark">
                <div class="card-content">
                    <form asp-action="Edit" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" value="@Model.Name" type="text" />
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" value="@Model.Price" type="text" />
                        </div>

                        <div class="form-group">
                            <label>Image</label>
                            <input asp-for="ImageFile" type="file" accept="image/png, image/jpeg">
                        </div>



                        <input class="btn btn-info" type="submit" value="Edit">
                    </form>
                </div>

            </div>

        </div>

    }


    else
    {
        <h1>@ViewBag.Error</h1>

    }
}
